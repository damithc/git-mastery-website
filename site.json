{
  "baseUrl": "/se-book",
  "timeZone": "Asia/Singapore",
  "style": {
    "codeTheme": "light"
  },
  "pages": [
    {
      "glob": "**/index.md"
    },
    {
      "glob": "**/index.md"
    },
    {
      "glob": "**/tours.md"
    }
  ],
  "pagesExclude": ["**/*-fragment.md"],
  "ignore": [
    "diagrams",
    "_site/*",
    "site.json",
    "lessons/*/text.md",
    "*.md",
    ".git/*"
  ],
  "deploy": {
    "message": "Site Update."
  },
  "intrasiteLinkValidation": {
    "enabled": true
  },
  "enableSearch": true,
  "titlePrefix": "Git-Mastery",
  "plugins": ["mermaid", "filterTags"],
  "pluginsContext": {
    "filterTags" : {
      "tags": []
    },
    "mermaid": {
      "address": "https://unpkg.com/mermaid@11.7.0/dist/mermaid.esm.min.mjs"
    }
  }
}
